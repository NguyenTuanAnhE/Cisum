<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_2">

    <ImageView
        android:id="@+id/image_poster"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_250"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_title_back"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_48"
        android:background="@color/color_black_faded_in"
        app:layout_constraintBottom_toBottomOf="@id/image_poster"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxHeight="@dimen/dp_48"
        android:maxLines="2"
        android:padding="@dimen/dp_4"
        android:textColor="@color/color_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_title_back" />

</android.support.constraint.ConstraintLayout>
